{
    "apis": {
        "openai": {
            "type": "rest",
            "base_url": "https://api.openai.com/v1",
            "auth_type": "bearer",
            "auth_token": "your-api-key",
            "headers": {
                "Content-Type": "application/json"
            },
            "timeout": 30,
            "retry_count": 3,
            "retry_delay": 1
        },
        "google_cloud": {
            "type": "rest",
            "base_url": "https://translation.googleapis.com/language/translate/v2",
            "auth_type": "api_key",
            "auth_token": "your-api-key",
            "timeout": 30,
            "retry_count": 3,
            "retry_delay": 1
        },
        "notion": {
            "type": "rest",
            "base_url": "https://api.notion.com/v1",
            "auth_type": "bearer",
            "auth_token": "your-notion-api-key",
            "headers": {
                "Content-Type": "application/json",
                "Notion-Version": "2022-06-28"
            },
            "timeout": 30,
            "retry_count": 3,
            "retry_delay": 1,
            "options": {
                "database_id": "your-database-id",
                "page_size": 100
            }
        },
        "n8n": {
            "type": "automation",
            "platform": "n8n",
            "webhook_url": "https://your-n8n-instance.com/webhook/your-workflow",
            "headers": {
                "X-N8N-Signature": "your-webhook-secret"
            },
            "timeout": 60,
            "retry_count": 3,
            "retry_delay": 5
        },
        "make": {
            "type": "automation",
            "platform": "make",
            "webhook_url": "https://hook.make.com/your-scenario",
            "headers": {
                "X-Make-Signature": "your-webhook-secret"
            },
            "timeout": 60,
            "retry_count": 3,
            "retry_delay": 5
        }
    },
    "webhooks": {
        "data_processing": {
            "url": "https://your-webhook-server.com/process",
            "method": "POST",
            "headers": {
                "Content-Type": "application/json",
                "X-API-Key": "your-webhook-key"
            },
            "timeout": 30,
            "retry_count": 3,
            "retry_delay": 1
        },
        "notification": {
            "url": "https://your-webhook-server.com/notify",
            "method": "POST",
            "headers": {
                "Content-Type": "application/json",
                "X-API-Key": "your-webhook-key"
            },
            "timeout": 30,
            "retry_count": 3,
            "retry_delay": 1
        }
    },
    "default_settings": {
        "timeout": 30,
        "retry_count": 3,
        "retry_delay": 1,
        "max_retries": 3,
        "concurrent_requests": 5
    }
} 