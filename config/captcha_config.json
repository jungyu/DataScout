{
    "general": {
        "max_retries": 3,
        "save_samples": true,
        "sample_dir": "../captchas",
        "enable_machine_learning": false,
        "fallback_to_service": true,
        "auto_retry_different_methods": true,
        "retry_delay": {"min": 1, "max": 3},
        "reporting_enabled": true
    },
    "text_captcha": {
        "enabled": true,
        "min_confidence": 0.8,
        "preprocessing": {
            "grayscale": true,
            "threshold": true,
            "noise_reduction": true,
            "contrast_enhancement": true,
            "deskew": true,
            "border_removal": true,
            "segmentation": true
        },
        "ocr_engine": "tesseract",
        "tesseract_config": {
            "lang": "eng",
            "config": "--psm 7"
        },
        "alternative_engines": {
            "easyocr": {
                "enabled": false,
                "languages": ["en"]
            },
            "paddleocr": {
                "enabled": false,
                "use_gpu": false,
                "lang": "en"
            }
        },
        "character_whitelist": "0123456789ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz",
        "character_blacklist": "!@#$%^&*()_+-=[]{}|;:,.<>?/"
    },
    "slider_captcha": {
        "enabled": true,
        "move_strategy": "simulate_human",
        "track_generation": {
            "offset_start": {"min": 20, "max": 50},
            "move_time": {"min": 800, "max": 2000},
            "steps": {"min": 20, "max": 40},
            "early_slow_down": true,
            "slow_down_threshold": 0.7
        },
        "simulation": {
            "track_deviation": 0.2,
            "release_delay": {"min": 50, "max": 200},
            "acceleration": {"min": 200, "max": 1500},
            "deceleration": {"min": 200, "max": 1500},
            "jitter": {"min": 0, "max": 2},
            "mouse_down_delay": {"min": 50, "max": 150}
        },
        "advanced_settings": {
            "multiple_step_slide": true,
            "step_pauses": {"min": 10, "max": 30},
            "detect_slide_success": true,
            "detect_patterns": [
                "success",
                "verified",
                "驗證成功"
            ]
        },
        "image_processing": {
            "enabled": true,
            "edge_detection": true,
            "template_matching": true,
            "diff_threshold": 0.3
        }
    },
    "click_captcha": {
        "enabled": true,
        "detection_method": "template_matching",
        "click_delay": {"min": 300, "max": 800},
        "move_delay": {"min": 100, "max": 300},
        "confidence_threshold": 0.75,
        "detection_methods": {
            "template_matching": {
                "method": "cv2.TM_CCOEFF_NORMED",
                "scale_factor": 1.0
            },
            "object_detection": {
                "model_path": "../models/object_detection.pth",
                "confidence": 0.7
            },
            "image_classification": {
                "model_path": "../models/image_classifier.pth",
                "target_classes": ["car", "bicycle", "bus", "traffic light", "fire hydrant"]
            }
        },
        "click_pattern": {
            "natural_order": true,
            "random_start": true,
            "hover_before_click": true
        },
        "special_handlers": {
            "geetest": true,
            "tencent": true,
            "yidun": true
        }
    },
    "rotate_captcha": {
        "enabled": true,
        "detection_method": "edge_detection",
        "angle_precision": 5,
        "retry_angles": [10, 20, -10, -20],
        "edge_detection": {
            "canny_threshold1": 50,
            "canny_threshold2": 150,
            "blur_kernel_size": 5
        },
        "rotation_simulation": {
            "move_time": {"min": 500, "max": 1200},
            "steps": {"min": 10, "max": 20},
            "overshoot_probability": 0.3,
            "correction_delay": {"min": 200, "max": 500}
        }
    },
    "recaptcha": {
        "enabled": true,
        "api_key": "your_2captcha_api_key",
        "service": "2captcha",
        "timeout": 120,
        "proxy_type": "http",
        "callback_urls": ["http://your-domain.com/callback"],
        "version": {
            "v2": true,
            "v3": true,
            "v3_min_score": 0.7,
            "enterprise": true
        },
        "invisible": {
            "enabled": true,
            "detection_method": "attribute_scan",
            "auto_solve": true
        },
        "audio_challenge": {
            "enabled": false,
            "use_speech_recognition": true,
            "speech_recognition_engine": "google"
        }
    },
    "hcaptcha": {
        "enabled": true,
        "api_key": "your_2captcha_api_key",
        "service": "2captcha",
        "timeout": 120,
        "enterprise": false,
        "invisible": {
            "enabled": true,
            "detection_method": "attribute_scan"
        }
    },
    "service_providers": {
        "2captcha": {
            "enabled": true,
            "api_key": "your_2captcha_api_key",
            "timeout": 120,
            "min_balance": 1.0,
            "check_balance": true,
            "balance_check_interval": 3600,
            "balance_alert_threshold": 2.0,
            "report_bad": true
        },
        "anti_captcha": {
            "enabled": false,
            "api_key": "your_anticaptcha_api_key",
            "timeout": 120,
            "min_balance": 1.0,
            "check_balance": true,
            "balance_check_interval": 3600
        },
        "capsolver": {
            "enabled": false,
            "api_key": "your_capsolver_api_key",
            "timeout": 120,
            "min_balance": 1.0
        },
        "captcha_ai": {
            "enabled": false,
            "api_key": "your_captcha_ai_api_key",
            "timeout": 120,
            "min_balance": 1.0
        }
    },
    "machine_learning": {
        "model_dir": "../models",
        "inference_device": "cpu",
        "batch_size": 32,
        "text_recognition": {
            "model_path": "text_recognition.pth",
            "char_set": "0123456789abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ",
            "image_size": [100, 30],
            "preprocessing": {
                "resize": true,
                "normalize": true,
                "grayscale": true
            },
            "augmentation": {
                "enabled": true,
                "rotation_range": 10,
                "width_shift": 0.1,
                "height_shift": 0.1
            },
            "model_format": "pytorch"
        },
        "object_detection": {
            "model_path": "object_detection.pth",
            "confidence_threshold": 0.5,
            "nms_threshold": 0.4,
            "model_format": "pytorch",
            "classes": ["car", "bicycle", "bus", "traffic light", "fire hydrant", "stop sign", "parking meter"]
        },
        "training": {
            "enabled": false,
            "auto_retrain": false,
            "min_samples": 500,
            "train_interval": 604800,
            "validation_split": 0.2,
            "epochs": 50,
            "batch_size": 32,
            "learning_rate": 0.001
        }
    },
    "data_collection": {
        "enabled": true,
        "save_full_page_screenshot": true,
        "save_captcha_screenshot": true,
        "save_captcha_html": true,
        "save_metadata": true,
        "anonymize_data": true,
        "sample_organization": {
            "by_type": true,
            "by_date": true,
            "by_domain": true
        }
    },
    "logging": {
        "enabled": true,
        "level": "INFO",
        "save_failed_samples": true,
        "failed_samples_dir": "../captchas/failed",
        "success_samples_dir": "../captchas/success",
        "log_performance_metrics": true,
        "log_service_usage": true,
        "log_service_costs": true,
        "debug_screenshots": true,
        "debug_screenshots_dir": "../logs/captcha_debug"
    },
    "monitoring": {
        "enabled": true,
        "success_rate_threshold": 0.6,
        "alert_on_low_success": true,
        "success_rate_window": 100,
        "report_generation": {
            "enabled": true,
            "interval": 86400,
            "include_metrics": ["success_rate", "solve_time", "cost"]
        }
    },
    "timeout": 30,
    "third_party_service": {
        "type": "2captcha",
        "api_key": "your_api_key_here",
        "site_key": "your_site_key_here",
        "url": "https://your-target-site.com",
        "options": {
            "max_retries": 3,
            "retry_delay": 5,
            "timeout": 120
        }
    },
    "detection_patterns": [
        {
            "type": "recaptcha",
            "xpath": "//iframe[contains(@src, 'recaptcha')]",
            "text_pattern": "recaptcha|reCAPTCHA|我不是機器人"
        },
        {
            "type": "hcaptcha",
            "xpath": "//iframe[contains(@src, 'hcaptcha')]",
            "text_pattern": "hcaptcha|hCaptcha|人機驗證"
        },
        {
            "type": "image_captcha",
            "xpath": "//img[contains(@src, 'captcha') or contains(@alt, 'captcha')]",
            "text_pattern": "captcha|驗證碼|請輸入|看不清|換一張"
        }
    ],
    "custom_handlers": [
        {
            "type": "custom",
            "path": "src.extractors.handlers.custom_handlers.solve_custom_captcha"
        }
    ]
}